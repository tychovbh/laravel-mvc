{
    "name": "tychovbh/laravel-mvc",
    "type": "library",
    "description": "Add mvc structure to laravel",
    "keywords": [
        "tychovbh",
        "laravel-mvc"
    ],
    "homepage": "https://github.com/tychovbh/laravel-mvc",
    "license": "MIT",
    "authors": [
        {
            "name": "Tycho",
            "email": "info@bespokeweb.nl",
            "homepage": "https://github.com/tychovbh",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "tychovbh/laravel-package-skeleton": "^1.3",
        "urameshibr/lumen-form-request": "^1.5",
        "illuminate/console": "~5.6.0|~5.7.0|~5.8.0|~5.9.0",
        "illuminate/contracts": "~5.6.0|~5.7.0|~5.8.0|~5.9.0",
        "illuminate/database": "~5.6.0|~5.7.0|~5.8.0|~5.9.0",
        "illuminate/http": "~5.6.0|~5.7.0|~5.8.0|~5.9.0",
        "illuminate/support": "~5.6.0|~5.7.0|~5.8.0|~5.9.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "orchestra/testbench": "^3.8",
        "phpunit/phpunit": "^8.1",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Tychovbh\\Mvc\\": "src"
        },
        "files": [
            "src/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tychovbh\\Tests\\Mvc\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Tychovbh\\Mvc\\MvcServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
