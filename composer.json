{
    "name": "tychovbh/laravel-mvc",
    "type": "library",
    "description": "Add mvc structure to laravel",
    "keywords": [
        "tychovbh",
        "laravel-mvc"
    ],
    "homepage": "https://github.com/tychovbh/laravel-mvc",
    "license": "MIT",
    "authors": [
        {
            "name": "Tycho",
            "email": "info@bespokeweb.nl",
            "homepage": "https://github.com/tychovbh",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "doctrine/dbal": "^3.0",
        "illuminate/console": "^8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/database": "^8.0",
        "illuminate/http": "^8.0",
        "illuminate/mail": "^8.0",
        "illuminate/support": "^8.0",
        "rbdwllr/reallysimplejwt": "^3.1",
        "squizlabs/php_codesniffer": "^3.5",
        "urameshibr/lumen-form-request": "^1.5"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.13",
        "phpunit/phpunit": "^8.1",
        "mollie/laravel-mollie": "^2.0",
        "anam/phantomjs-linux-x86-binary": "^2.1",
        "anam/phantommagick": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Tychovbh\\Mvc\\": "src",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "src/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Tychovbh\\Mvc\\MvcServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
